{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": ["eslint:recommended"],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "eqeqeq": ["error", "always"],
        "no-eval": "error",
        "no-unused-vars": "warn",
        "no-implicit-globals": "error",
        "prefer-promise-reject-errors": "error",
        "no-undef": "error",
        "no-const-assign": "error",
        "no-var": "error",
        "indent": ["error", 4],
        "quotes": ["error", "double"],
        "semi": ["error", "always"],
        "arrow-spacing": ["error", { "before": true, "after": true }],
        "no-duplicate-imports": "error",
        "prefer-arrow-callback": "error",
        "prefer-const": "error",
        "no-console": "warn",
        "no-debugger": "error",
        "no-alert": "warn"
        // "linebreak-style": ["error", "windows"]
    }
}
